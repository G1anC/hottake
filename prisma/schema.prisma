generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}


datasource db {
    provider = "postgresql"
}

model User {
    id             Int      @id @default(autoincrement())
    email          String   @unique
    name           String?
    pseudo         String?  @unique
    password       String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    bio            String?
    color          String?
    image          String?

    friends        User[]   @relation("UserFriends")
    friendOf       User[]   @relation("UserFriends")

    reviews        Review[]

    hotTakes       String[] @default([])
    bigFive        String[] @default([])
    nextList       String[] @default([])
    listened       String[] @default([])
}

model Review {
    id          Int      @id @default(autoincrement())
    mbid        String
    content     String?
    note        Int
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    author      User     @relation(fields: [authorId], references: [id])
    authorId    Int
}
